<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.zont.modsextractor.ui.MEController">
   <children>
      <GridPane prefHeight="800.0" prefWidth="800.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="180.0" minWidth="180.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <GridPane GridPane.columnIndex="1">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="NEVER" />
              </rowConstraints>
               <children>
                   <VBox alignment="TOP_CENTER" spacing="5.0" GridPane.rowIndex="0">
                       <children>
                           <Button fx:id="bt_select" maxWidth="180.0" minWidth="180.0" mnemonicParsing="false" text="Select preset" textAlignment="CENTER" wrapText="true" />
                        <TextField fx:id="tf_prefix" alignment="CENTER" promptText="Path prefix" text="mods" />
                        <GridPane>
                          <columnConstraints>
                            <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
                            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                              <Label text="Path Separator:" GridPane.columnIndex="0">
                                 <GridPane.margin>
                                    <Insets left="5.0" right="3.0" />
                                 </GridPane.margin>
                              </Label>
                              <ChoiceBox fx:id="sp_sep" GridPane.columnIndex="1" />
                           </children>
                        </GridPane>
                       </children>
                   </VBox>
                  <VBox alignment="BOTTOM_CENTER" spacing="5.0" GridPane.rowIndex="1">
                     <children>
                        <Button fx:id="bt_us" maxWidth="180.0" minWidth="180.0" mnemonicParsing="false" text="Updater script" textAlignment="CENTER" wrapText="true" />
                        <Button fx:id="bt_ap" maxWidth="180.0" minWidth="180.0" mnemonicParsing="false" text="Arma Param" textAlignment="CENTER" wrapText="true" />
                     </children>
                  </VBox>
               </children>
            </GridPane>
            <TableView fx:id="table" editable="true" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn editable="false" minWidth="175.0" prefWidth="-1.0" text="Name">
                    <cellValueFactory><PropertyValueFactory property="name" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn editable="false" minWidth="75.0" prefWidth="-1.0" text="ID">
                    <cellValueFactory><PropertyValueFactory property="id" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn minWidth="300.0" prefWidth="-1.0" text="Link Name">
                    <cellValueFactory><PropertyValueFactory property="link" />
                    </cellValueFactory>
                </TableColumn>
              </columns>
               <GridPane.margin>
                  <Insets right="5.0" />
               </GridPane.margin>
            </TableView>
         </children>
      </GridPane>
   </children>
</AnchorPane>
